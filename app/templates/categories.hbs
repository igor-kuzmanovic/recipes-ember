<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model as |category|}}
      <tr>
        <th scope="row">{{category.id}}</th>
        <td>{{category.name}}</td>
      </tr>
    {{else}}
      <td>Sorry, no categories available!</td>
    {{/each}}
  </tbody>
</table>