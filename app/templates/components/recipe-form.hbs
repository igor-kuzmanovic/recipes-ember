  <fieldset class="col-lg-8">
    <div class="form-group row">
      <label for="title" class="col-2 col-form-label">Title</label>
      <div class="col-10">
        {{input type="text" id="title" value=this.recipe.title class="form-control" placeholder="Enter a title"}}
      </div>
    </div>
    <div class="form-group row">
      <label for="description" class="col-2 col-form-label">Description</label>
      <div class="col-10">
        {{textarea type="text" id="description" value=this.recipe.description class="form-control" placeholder="Enter a description"}}
      </div>
    </div>
    <div class="form-group row">
      <label for="ingredients" class="col-2 col-form-label">Ingredients</label>
      <div class="col-10">
        <select multiple class="form-control" id="ingredients">
          <option>Temp 1</option>
          <option>Temp 2</option>
          <option>Temp 3</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="category" class="col-2 col-form-label">Category</label>
      <div class="col-10">
        <select class="form-control" id="category">
          <option>Temp 1</option>
          <option>Temp 2</option>
          <option>Temp 3</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="tags" class="col-2 col-form-label">Tags</label>
      <div class="col-10">
        <select multiple class="form-control" id="tags">
          <option>Temp 1</option>
          <option>Temp 2</option>
          <option>Temp 3</option>
        </select>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <button type="submit" class="btn btn-primary btn-block col-sm-4">Submit</button>
    </div>
  </fieldset>
</form>