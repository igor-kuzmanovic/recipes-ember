<form {{action onFormSubmit on="submit"}}>
  <div class="form-group row">
    <label for="title" class="col-3 col-form-label">Title</label>
    <div class="col-9">
      {{input type="text" id="title" value=recipe.title class="form-control" placeholder="Enter a title"}}
    </div>
  </div>
  <div class="form-group row">
    <label for="description" class="col-3 col-form-label">Description</label>
    <div class="col-9">
      {{textarea type="text" id="description" value=recipe.description class="form-control" placeholder="Enter a description"}}
    </div>
  </div>
  <div class="form-group row">
    <label for="ingredients" class="col-3 col-form-label">Ingredients</label>
    <div class="col-9">
      {{#power-select-multiple selected=recipe.ingredients searchField="name" options=ingredients onchange=(action (mut recipe.ingredients)) dropdownClass="in-modal-dropdown" placeholder="Select the ingredients" as |ingredient|}}
        {{ingredient.name}}
      {{/power-select-multiple}}
    </div>
  </div>
  <div class="form-group row">
    <label for="category" class="col-3 col-form-label">Category</label>
    <div class="col-9">
      {{#power-select selected=recipe.category searchField="name" options=categories onchange=(action (mut recipe.category)) dropdownClass="in-modal-dropdown" placeholder="Select a category" as |category|}}
        {{category.name}}
      {{/power-select}}
    </div>
  </div>
  <div class="form-group row">
    <label for="tags" class="col-3 col-form-label">Tags</label>
    <div class="col-9">
      {{#power-select-multiple selected=recipe.tags searchField="name" options=tags onchange=(action (mut recipe.tags)) dropdownClass="in-modal-dropdown" placeholder="Select the tags" as |tag|}}
        {{tag.name}}
      {{/power-select-multiple}}
    </div>
  </div>
  <div class="form-group row">
    <label for="image" class="col-3 col-form-label">Image</label>
    <div class="col-9">
      {{#file-upload name="photos" accept="image/*" onfileadd=(action "onFileAdd") as |queue|}}
        <a class="btn btn-primary" role="button">
          {{#if queue.files.length}}
            <span class="text-white">Uploading... {{fa-icon "spinner" spin=true}}</span>
          {{else}}
            <span class="text-white">Upload {{fa-icon "upload"}}</span>
          {{/if}}
        </a>
      {{/file-upload}}
    </div>
  </div>
  {{#if recipe.imageUrl}}
    <div class="form-group row justify-content-center">
      <img src={{recipe.imageUrl}} class="img-recipe img-thumbnail" alt="Recipe Image">
    </div>
  {{/if}}
  {{input type="hidden" id="imageUrl" value=recipe.imageUrl}}
  <hr>
  <div class="form-group row justify-content-center">
    {{input type="submit" class="btn btn-primary" value="Submit"}}
  </div>
</form>