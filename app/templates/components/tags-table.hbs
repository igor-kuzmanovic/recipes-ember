{{yield}}
<table class="table table-hover table-sm text-center">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each tags as |tag|}}
      <tr>
        <th scope="row" class="align-middle">{{tag.id}}</th>
        <td class="align-middle">{{tag.name}}</td>
        <td class="align-middle">
          <div class="btn-group" role="group">
            {{#bs-button type="info" outline="true"}}Details{{/bs-button}}
            {{#bs-button type="primary" outline="true"}}Update{{/bs-button}}
            {{#bs-button type="danger" outline="true"}}Delete{{/bs-button}}
          </div>
        </td>
      </tr>
    {{else}}
      <td>Sorry, no tags available!</td>
    {{/each}}
  </tbody>
</table>