<div class="card-deck recipe-card-deck row">
  <div class="card recipe-card col-sm-4">
    <div class="card-body">
      <h4 class="card-title">Create your own recipe!</h4>
    </div>
    <div class="card-footer">
      {{#link-to "recipes.create" class="btn btn-primary btn-block"}}
        Create
      {{/link-to}}
    </div>
  </div>
  {{#each this.model as |recipe|}}
    <div class="card recipe-card col-sm-4">
      <img src={{recipe.imageUrl}} class="card-img-top" alt="Recipe Image">
      <div class="card-body">
        <h4 class="card-title">{{recipe.title}}</h4>
        <h6 class="card-subtitle mb-2 text-muted">{{recipe.category.name}}</h6>
        <p class="card-text recipe-card-description">{{recipe.description}}</p>
        <h6 class="card-text text-muted">{{recipe-date-format recipe.date}}</h6>
      </div>
      <div class="card-footer">
        {{#link-to "recipes.recipe" recipe class="btn btn-info btn-block"}}
          Details
        {{/link-to}}
      </div>
    </div>
  {{else}}
    <h1>Sorry, no recipes available!</h1>
  {{/each}}
</div>
