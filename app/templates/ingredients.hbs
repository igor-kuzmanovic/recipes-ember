<table class="table table-hover table-sm text-center">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  {{#each model as |ingredient|}}
    <tr>
      <th scope="row" class="align-middle">{{ingredient.id}}</th>
      <td class="align-middle">{{ingredient.name}}</td>
      <td class="align-middle">
        <div class="btn-group" role="group">
          {{#bs-button type="info" outline="true" onClick=(action "openModal" "Details" ingredient)}}Details{{/bs-button}}
          {{#bs-button type="info" outline="true" onClick=(action "openModal" "Update" ingredient)}}Update{{/bs-button}}
          {{#bs-button type="danger" outline="true" onClick=(action "openModal" "Delete" ingredient)}}Delete{{/bs-button}}
        </div>
      </td>
    </tr>
  {{else}}
    <td>Sorry, no ingredients available!</td>
  {{/each}}
  </tbody>
</table>
<hr>
{{#bs-button type="primary" onClick=(action "openModal" "Create" ingredient)}}Create{{/bs-button}}

{{#generic-modal type=modalType modelType="Ingredient" isOpen=isModalOpen}}
  {{component modalBodyComponent ingredient=selectedIngredient}}
{{/generic-modal}}