<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
  </tr>
  </thead>
  <tbody>
  {{#each this.model as |ingredient|}}
    <tr>
      <th scope="row">{{ingredient.id}}</th>
      <td>{{ingredient.name}}</td>
    </tr>
  {{else}}
    <td>Sorry, no ingredients available!</td>
  {{/each}}
  </tbody>
</table>